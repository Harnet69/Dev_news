<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:title="API parse delay in minutes"
        android:key="api_parse_delay"/>

    <EditTextPreference
        android:defaultValue="10"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:title="Quantity of articles on the list"
        android:key="qtt_articles"/>

    <EditTextPreference
        android:defaultValue="7"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:title="Storing articles were read history(days)"
        android:key="storing_history"/>

</PreferenceScreen>