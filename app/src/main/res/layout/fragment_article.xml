<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailFragment">

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/btn_star"
            android:scaleType="fitCenter"
            android:minHeight="200dp"/>
        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_image"
            android:text="Title"
            style="@style/Title"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/article_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_title"
            android:text="id"
            style="@style/Text"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_id"
            android:text="Author"
            style="@style/Text"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_author"
            android:text="Time"
            style="@style/Text"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/article_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_time"
            android:text="Score"
            style="@style/Text"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/article_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_score"
            android:gravity="center_horizontal"
            style="@style/URL"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>
</layout>